<h1>Contact Us</h1>

<%= form_tag contact_submit_path do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, { class: 'abc' } %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :message %>
    <%= text_area_tag :message %>
  </div>
  <%= submit_tag 'Contact Us!' %>
<% end %>