<h1>Please make the payment</h1>

<%= form_tag order_charges_path(@order), id: 'server-form' do %>
  <%= hidden_field_tag :stripe_token %>
<% end %>

<%= form_tag order_charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: <%= number_to_currency(@amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.application.credentials.dig(:stripe, :publishable_key) %>"
          data-description="Order's payment"
          data-amount="@amount"
          data-locale="auto"></script>
<% end %>



